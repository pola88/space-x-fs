{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "type-modules",
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "strict": false
  }
}